<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:id="@+id/rl_view_listview_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fl_view_listview_fl"
        >
        <ImageView 
            android:id="@+id/iv_view_downup_listview_arrow"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_listview_headview_red_arrow"
            />
        <ProgressBar 
            android:id="@+id/pb_view_downup_listview_pb"
            android:visibility="invisible"
            android:indeterminateDrawable="@drawable/progressstyleshape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </FrameLayout>
    
    <TextView 
		android:layout_marginTop="10dp"
        android:id="@+id/tv_view_downup_listview_title"
        android:text="下拉刷新"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@id/fl_view_listview_fl"
        android:gravity="center"
        />

    <TextView 
        android:id="@+id/tv_view_downup_listview_titme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_view_downup_listview_title"
        android:layout_below="@id/tv_view_downup_listview_title"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="上次刷新时间:1999-9-9 4:44"
        android:layout_marginBottom="5dp"
        />
    
</RelativeLayout>
